<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0f488bdc"
    tools:context="com.google.a3dgame.GuideActivity">
<android.support.v4.view.ViewPager
    android:id="@+id/guide_viewpager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5">

</android.support.v4.view.ViewPager>
<LinearLayout
    android:id="@+id/guide_ll"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView
        android:id="@+id/guide_dot1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/guide_drawable"
    android:clickable="true"/>
    <ImageView
        android:id="@+id/guide_dot2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/guide_drawable"
    android:clickable="true"/>
    <ImageView
        android:id="@+id/guide_dot3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/guide_drawable"
    android:clickable="true"/>
</LinearLayout>
</LinearLayout>

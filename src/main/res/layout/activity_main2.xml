<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_top_hsv_banner_bg"
    tools:context="com.google.a3dgame.Main2Activity">
    <HorizontalScrollView
        android:id="@+id/main_hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
       >
        <RadioGroup
            android:id="@+id/main_top_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/main_top_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文章首页"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@drawable/main_top_radiobutton_color"
                />

            <RadioButton
                android:id="@+id/main_top_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热点新闻"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:padding="10dp"/>

            <RadioButton
                android:id="@+id/main_top_rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏杂谈"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬件信息"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏前瞻"
                android:button="@null"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:textSize="16sp"
                android:padding="10dp"/>

            <RadioButton
                android:id="@+id/main_top_rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏评测"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原创精品"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏盘点"
                android:button="@null"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时事焦点"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
            <RadioButton
                android:id="@+id/main_top_rb10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻略中心"
                android:textColor="@drawable/main_top_radiobutton_color"
                android:button="@null"
                android:textSize="16sp"
                android:padding="10dp"/>
        </RadioGroup>
    </HorizontalScrollView>


    <RadioGroup
        android:id="@+id/main_bottom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#000000">
        <RadioButton
            android:id="@+id/main_bottom_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:padding="5dp"
            android:clickable="true"
            android:text="文章"
            android:background="@drawable/main_bottom_rg_background"
            android:drawableTop="@drawable/main_bottom_chapter"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/main_bottom_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:clickable="true"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:drawableTop="@drawable/main_bottom_forum"
            android:text="论坛"
            android:background="@drawable/main_bottom_rg_background"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/main_bottom_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="#ffffff"
            android:clickable="true"
            android:padding="5dp"
            android:drawableTop="@drawable/main_bottom_game"
            android:text="游戏"
            android:background="@drawable/main_bottom_rg_background"
            android:textSize="16sp"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_hsv"
        android:layout_above="@id/main_bottom_rg">

    </android.support.v4.view.ViewPager>
</RelativeLayout>

